{
    "name": "vscode-xcolor",
    "displayName": "xcolor",
    "description": "Integration of xcolor into the VSCode editor",
    "version": "0.1.1",
    "author": {
        "name": "Reiner Gerecke"
    },
    "publisher": "squiddy",
    "repository": {
        "type": "git",
        "url": "https://github.com/squiddy/vscode-xcolor.git"
    },
    "homepage": "https://github.com/squiddy/vscode-xcolor",
    "bugs": {
        "url": "https://github.com/squiddy/vscode-xcolor/issues"
    },
    "license": "SEE LICENSE",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.pickScreenColor"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.pickScreenColor",
                "title": "Pick color from screen"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "vsce": "^1.39.0"
    }
}